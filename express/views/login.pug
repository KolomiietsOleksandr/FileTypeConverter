doctype html
html
  head
    title File Type Converter
    link(rel='stylesheet', href='/styles/main.css')
    link(rel='stylesheet', href='/styles/login.css')
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/77ecbc8fc5.js" crossorigin="anonymous"></script>
  body
    header
      div#header
        img#logoImg(src="/images/Logo.png", alt="Logo")
        p#headLT1 FileType
        p#headLT2 Converter
        button#headerButtons3(type='button') <i class="fa-regular fa-user"></i>
        button#headerButtons2(type='button') Converter
        button#headerButtons1(type='button') Home
        hr#hr-line1
    main
      div#Form
        p.auText Login to your account
        div#question
          p.auSText Don't have an account yet?
          button#SignUpBut Sign up
        div#login
          form(action="/login", method="POST")
            label(for="email") Email:
            input(type="email", id="email", name="email", required)
            label(for="password") Password:
            input(type="password", id="password", name="password", required)
            button.authButton(type="submit") Login
            p#errorLogin Wrong email or password. Try again...

    <script src="scripts/headerButtons.js"></script>
    <script src="scripts/loginController.js"></script>
